        <VBox alignment="CENTER_RIGHT" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="14.0">
            <children>
            <HBox alignment="TOP_RIGHT">
               <children>
                  <VBox alignment="CENTER_RIGHT" prefHeight="42.0" prefWidth="222.0">
                     <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="39.0" text="View Centers">
                           <styleClass>
                              <String fx:value="heading-medium" />
                              <String fx:value="h1" />
                           </styleClass>
                        </Label>
                        <HBox prefHeight="2.0" prefWidth="192.0" style="-fx-background-color: white;">
